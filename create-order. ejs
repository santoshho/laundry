<div class="container">
  <h2>Create New Order</h2>

  <form action="/orders/create" method="POST" class="card p-4">

    <div class="mb-3">
      <label class="form-label">Customer Name</label>
      <input type="text" name="customer" class="form-control" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Select Service</label>
      <select name="service" id="serviceSelect" class="form-select" required>
        <% services.forEach(function(s){ %>
           <option value="<%= s.name %>" data-price="<%= s.price %>">
             <%= s.name %> â€” NPR <%= s.price %>/kg
           </option>
        <% }) %>
      </select>
    </div>

    <div class="mb-3">
      <label class="form-label">Weight (kg)</label>
      <input id="weightInput" type="number" min="1" name="weight" class="form-control">
    </div>

    <div class="mb-3">
      <label class="form-label">Total Price</label>
      <input id="totalPrice" type="text" class="form-control" readonly>
    </div>

    <button type="submit" class="btn btn-primary">Submit Order</button>
  </form>
</div>

<script>
  const serviceSelect = document.getElementById("serviceSelect");
  const weightInput = document.getElementById("weightInput");
  const totalPrice = document.getElementById("totalPrice");

  function calc() {
    const price = Number(serviceSelect.selectedOptions[0].dataset.price);
    const kg = Number(weightInput.value);
    if(kg > 0) totalPrice.value = "NPR " + (price * kg);
  }

  serviceSelect.addEventListener("change", calc);
  weightInput.addEventListener("input", calc);
</script>

