<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-file-text me-2"></i>Request Details
        </h2>
        <a href="/user/requests" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Requests
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Request Information</h5>
                </div>
                <div class="card-body">
                    <% if (typeof order !== 'undefined' && order) { %>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Request ID:</strong> #<%= order.id %></p>
                                <p><strong>Customer:</strong> <%= order.name %></p>
                                <p><strong>Phone:</strong> <%= order.phone %></p>
                                <p><strong>Status:</strong> 
                                    <span class="badge bg-<%= order.status === 'pending' ? 'warning' : order.status === 'completed' ? 'success' : 'info' %>">
                                        <%= order.status %>
                                    </span>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Created:</strong> <%= order.created_at ? new Date(order.created_at).toLocaleDateString() : 'N/A' %></p>
                                <p><strong>Updated:</strong> <%= order.updated_at ? new Date(order.updated_at).toLocaleDateString() : 'N/A' %></p>
                            </div>
                        </div>
                        
                        <hr>
                        
                        <div class="mb-3">
                            <h6>Address:</h6>
                            <p><%= order.address || 'Not provided' %></p>
                        </div>
                        
                        <div class="mb-3">
                            <h6>Items Description:</h6>
                            <p><%= order.items %></p>
                        </div>
                        
                        <% if (order.attachment) { %>
                            <div class="mb-3">
                                <h6>Attachment:</h6>
                                <a href="/<%= order.attachment %>" target="_blank" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-paperclip me-1"></i>View Attachment
                                </a>
                            </div>
                        <% } %>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="bi bi-exclamation-triangle text-muted" style="font-size: 3rem;"></i>
                            <h5 class="text-muted mt-3">Request not found</h5>
                            <p class="text-muted">The requested order could not be found.</p>
                            <a href="/user/requests" class="btn btn-primary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Requests
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Status Timeline</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item active">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6>Request Submitted</h6>
                                <small class="text-muted">Your request has been received</small>
                            </div>
                        </div>
                        
                        <% if (typeof order !== 'undefined' && order && order.status !== 'pending') { %>
                            <div class="timeline-item active">
                                <div class="timeline-marker bg-info"></div>
                                <div class="timeline-content">
                                    <h6>Processing</h6>
                                    <small class="text-muted">Your request is being processed</small>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="timeline-item">
                                <div class="timeline-marker"></div>
                                <div class="timeline-content">
                                    <h6>Processing</h6>
                                    <small class="text-muted">Waiting to be processed</small>
                                </div>
                            </div>
                        <% } %>
                        
                        <% if (typeof order !== 'undefined' && order && order.status === 'completed') { %>
                            <div class="timeline-item active">
                                <div class="timeline-marker bg-success"></div>
                                <div class="timeline-content">
                                    <h6>Completed</h6>
                                    <small class="text-muted">Your order is ready</small>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="timeline-item">
                                <div class="timeline-marker"></div>
                                <div class="timeline-content">
                                    <h6>Completed</h6>
                                    <small class="text-muted">Pending completion</small>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline-item {
    position: relative;
    margin-bottom: 20px;
}

.timeline-item:before {
    content: '';
    position: absolute;
    left: -22px;
    top: 20px;
    bottom: -20px;
    width: 2px;
    background: #dee2e6;
}

.timeline-item:last-child:before {
    display: none;
}

.timeline-marker {
    position: absolute;
    left: -30px;
    top: 0;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: #dee2e6;
    border: 3px solid #fff;
    box-shadow: 0 0 0 2px #dee2e6;
}

.timeline-item.active .timeline-marker {
    box-shadow: 0 0 0 2px #28a745;
}

.timeline-content h6 {
    margin-bottom: 5px;
    font-size: 14px;
}

.timeline-content small {
    font-size: 12px;
}
</style>

<%- include('../partials/footer') %>