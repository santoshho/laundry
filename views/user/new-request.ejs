<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-plus-circle me-2"></i>New Laundry Request
        </h2>
        <a href="/user/dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <form action="/user/create-order" method="POST" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <input type="text" class="form-control" name="name" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" name="phone" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Pickup Address</label>
                            <textarea class="form-control" name="address" rows="3" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Items Description</label>
                            <textarea class="form-control" name="items" rows="4" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Attachment (Optional)</label>
                            <input type="file" class="form-control" name="attachment" accept="image/*,.pdf,.doc,.docx">
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send me-2"></i>Submit Request
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Request Information
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i><small>Free pickup and delivery</small></li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i><small>24â€“48 hour turnaround</small></li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i><small>Professional cleaning service</small></li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i><small>Eco-friendly detergents</small></li>
                        <li><i class="bi bi-check-circle text-success me-2"></i><small>Satisfaction guaranteed</small></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
