<%- include('../partials/header') %>

<div class="container mt-4">
    <h2>Payment</h2>
    <p><strong>Service:</strong> <%= service %></p>
    <p><strong>KG:</strong> <%= kg %> kg</p>
    <p><strong>Price per KG:</strong> NPR <%= price %></p>
    <h4>Total: NPR <%= total %></h4>

    <form action="/user/submit-payment" method="POST">
        <input type="hidden" name="service" value="<%= service %>">
        <input type="hidden" name="kg" value="<%= kg %>">
        <input type="hidden" name="total" value="<%= total %>">

        <label>Choose Payment Method:</label>
        <select name="payment_method" class="form-control mb-3" required>
            <option value="cod">Cash on Delivery</option>
            <option value="esewa">eSewa</option>
            <option value="khalti">Khalti</option>
        </select>

        <button class="btn btn-success w-100">Confirm Payment</button>
    </form>
</div>

<%- include('../partials/footer') %>
