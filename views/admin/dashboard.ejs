<%- include('../partials/header') %>

<div class="container mt-4">
  <h1 class="mb-4">Admin Dashboard</h1>

  <div class="row g-4">
    <div class="col-md-4">
      <div class="card p-3">
        <h5>Total Orders</h5>
        <p class="display-6"><%= orders.length %></p>
        <a href="/admin/orders" class="btn btn-sm btn-primary">View Orders</a>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card p-3">
        <h5>Total Services</h5>
        <p class="display-6"><%= services.length %></p>
        <a href="/admin/services" class="btn btn-sm btn-primary">Manage Services</a>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card p-3">
        <h5>Registered Users</h5>
        <p class="display-6"><%= users.length %></p>
        <a href="/admin/users" class="btn btn-sm btn-primary">View Users</a>
      </div>
    </div>
  </div>

  <hr class="my-4">

  <h4>Recent Orders</h4>

  <% if (orders.length > 0) { %>
    <table class="table">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Customer</th>
          <th>Status</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% orders.slice().reverse().slice(0, 8).forEach(order => { %>
          <tr>
            <td>#<%= order.id %></td>
            <td><%= order.name %></td>
            <td><%= order.status %></td>
            <td><%= new Date(order.created_at).toLocaleString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No orders yet.</p>
  <% } %>

</div>

<%- include('../partials/footer') %>
