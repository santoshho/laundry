<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <title>Manage Pricing</title>
</head>

<body>
    <%- include('../partials/sidebar'); %>

    <main class="main-content">
        <div class="container mt-4">

            <h2 class="mb-4">Manage Pricing</h2>

            <!-- Pricing Table -->
            <div class="card shadow">
                <div class="card-body">

                    <table class="table table-bordered table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Service Name</th>
                                <th>Price</th>
                                <th>Unit</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% pricing.forEach((item, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= item.name %></td>
                                    <td>Rs <%= item.price %></td>
                                    <td><%= item.unit %></td>

                                    <td>
                                        <button class="btn btn-sm btn-primary"
                                            onclick="openEditModal('<%= item.id %>', '<%= item.name %>', '<%= item.price %>', '<%= item.unit %>')">
                                            Edit
                                        </button>

                                        <form action="/admin/pricing/<%= item.id %>/delete" method="POST" class="d-inline">
                                            <button class="btn btn-sm btn-danger"
                                                onclick="return confirm('Delete this pricing?')">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>

                    <!-- Add New Pricing Button -->
                    <button class="btn btn-success mt-3" onclick="openNewModal()">Add New Pricing</button>

                </div>
            </div>
        </div>
    </main>


    <!-- PRICING MODAL -->
    <div class="modal fade" id="pricingModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">

                <form method="POST" action="/admin/pricing">
                    <input type="hidden" name="action" value="update_pricing">
                    <input type="hidden" name="pricing_id" id="pricing_id">

                    <div class="modal-header">
                        <h5 class="modal-title" id="modalTitle">Edit Pricing</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">

                        <div class="mb-3">
                            <label class="form-label">Service Name</label>
                            <input type="text" id="name" name="name" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Price</label>
                            <input type="number" id="price" name="price" class="form-control" min="1" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Unit</label>
                            <input type="text" id="unit" name="unit" class="form-control" value="per kg">
                        </div>

                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button class="btn btn-primary">Save</button>
                    </div>

                </form>

            </div>
        </div>
    </div>

    <script>
        function openEditModal(id, name, price, unit) {
            document.getElementById("modalTitle").innerText = "Edit Pricing";
            document.getElementById("pricing_id").value = id;
            document.getElementById("name").value = name;
            document.getElementById("price").value = price;
            document.getElementById("unit").value = unit;

            new bootstrap.Modal(document.getElementById('pricingModal')).show();
        }

        function openNewModal() {
            document.getElementById("modalTitle").innerText = "Add New Pricing";
            document.getElementById("pricing_id").value = "";
            document.getElementById("name").value = "";
            document.getElementById("price").value = "";
            document.getElementById("unit").value = "per kg";

            new bootstrap.Modal(document.getElementById('pricingModal')).show();
        }
    </script>

    <%- include('../partials/scripts'); %>
</body>
</html>
