<!doctype html><html><head><meta charset="utf-8"><title>Change Admin Password</title></head><body>
<h1>Change Password</h1>
<p><a href="/admin/dashboard">Dashboard</a></p>
<% if(typeof error !== 'undefined'){ %><p style="color:red;"><%= error %></p><% } %>
<% if(typeof success !== 'undefined'){ %><p style="color:green;"><%= success %></p><% } %>
<form method="post" action="/admin/change-password">
  <label>Current password: <input type="password" name="current_password" required></label><br>
  <label>New password: <input type="password" name="new_password" required></label><br>
  <label>Confirm new: <input type="password" name="confirm_password" required></label><br>
  <button type="submit">Change</button>
</form>
</body></html>