<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Laundry Service</title>
    <link rel="stylesheet" href="/css/style.css" />
</head>
<body>

    <%- include('partials/header') %>

    <!-- HERO SECTION -->
    <section class="hero">
        <div class="hero-content">
            <h1>Fast & Reliable Laundry Service</h1>
            <p>We pick up, clean, fold, and deliver your clothes — all at the best prices.</p>
            <a href="/order" class="btn-primary">Place an Order</a>
        </div>
    </section>


    <!-- SERVICES SECTION -->
    <section id="services" class="services-section">
        <h2 class="section-title">Our Services</h2>

        <div class="services-container">
            <div class="service-card">
                <img src="/images/wash.png" alt="Washing" />
                <h3>Washing</h3>
                <p>Premium fabric-friendly washing service.</p>
            </div>

            <div class="service-card">
                <img src="/images/iron.png" alt="Ironing" />
                <h3>Ironing</h3>
                <p>Crisp, clean, and perfectly ironed clothes.</p>
            </div>

            <div class="service-card">
                <img src="/images/delivery.png" alt="Delivery" />
                <h3>Pickup & Delivery</h3>
                <p>Fast home pickup and doorstep delivery.</p>
            </div>
        </div>
    </section>


    <!-- TESTIMONIALS SECTION -->
    <section id="testimonials" class="testimonials-section">
        <h2 class="section-title">What Our Customers Say</h2>

        <div class="testimonial-container">
            <% testimonials.forEach(t => { %>
                <div class="testimonial-card">
                    <div class="testimonial-image">
                        <img src="<%= t.image %>" alt="<%= t.name %>">
                    </div>
                    <p class="testimonial-text">"<%= t.message %>"</p>
                    <h3 class="testimonial-name"><%= t.name %></h3>
                </div>
            <% }) %>
        </div>
    </section>


    <!-- CONTACT SECTION -->
    <section id="contact" class="contact-section">
        <h2 class="section-title">Contact Us</h2>
        <div class="contact-container">
            <div class="contact-box">
                <h3>Phone</h3>
                <p>+977 9800000000</p>
            </div>
            <div class="contact-box">
                <h3>Email</h3>
                <p>contact@laundry.com</p>
            </div>
            <div class="contact-box">
                <h3>Location</h3>
                <p>Kathmandu, Nepal</p>
            </div>
        </div>
    </section>


    <!-- FOOTER -->
    <footer class="footer">
        <p>© 2025 Laundry Service. All rights reserved.</p>
    </footer>

</body>
</html>
