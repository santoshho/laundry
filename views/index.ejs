  <script>
    /* ---------- Calculator ---------- */
    document.getElementById('calcBtn').addEventListener('click', function (e) {
      e.preventDefault();
      const pricePerKg = parseFloat(document.getElementById('serviceType').value);
      const weight = parseFloat(document.getElementById('weightInput').value);
      if (!weight || weight <= 0) { alert('Enter valid weight'); return; }
      const total = pricePerKg * weight;
      document.getElementById('resultBox').classList.remove('d-none');
      document.getElementById('totalPrice').innerText = 'NPR ' + total.toFixed(2);
      // brief CTA glow pulse to draw attention
      const heroCTA = document.getElementById('heroCTA');
      heroCTA.classList.add('glow-on'); setTimeout(()=>heroCTA.classList.remove('glow-on'), 900);
    });

    /* ---------- BEFORE / AFTER SLIDER (medium) ---------- */
    (function(){
      const baCard = document.getElementById('baCard');
      const overlay = document.getElementById('baOverlay');
      const handle = document.getElementById('baHandle');
      let dragging = false;
      const setPos = (x) => {
        const rect = baCard.getBoundingClientRect();
        let pct = (x - rect.left) / rect.width;
        pct = Math.max(0.02, Math.min(0.98, pct));
        overlay.style.width = (pct * 100) + '%';
        handle.style.left = (pct * 100) + '%';
        handle.setAttribute('aria-valuenow', Math.round(pct*100));
      };

      // mouse
      handle.addEventListener('mousedown', ()=>dragging=true);
      document.addEventListener('mouseup', ()=>dragging=false);
      document.addEventListener('mousemove', (ev)=> { if(dragging) setPos(ev.clientX); });

      // touch
      handle.addEventListener('touchstart', ()=>dragging=true, {passive:true});
      document.addEventListener('touchend', ()=>dragging=false);
      document.addEventListener('touchmove', (ev)=> { if(ev.touches && ev.touches[0] && dragging) setPos(ev.touches[0].clientX); }, {passive:true});

      // init center
      window.addEventListener('load', ()=> {
        const rect = baCard.getBoundingClientRect();
        setPos(rect.left + rect.width/2);
      });
    })();

    /* ---------- ACTIVITY POPUP (bottom-left) ---------- */
    (function(){
      const box = document.getElementById('activityBox');
      const text = document.getElementById('activityText');
      const messages = [
        'Suman just placed an order ðŸ§º',
        'Aayusha booked pickup from Gaindakot',
        'Prakash paid for Express Service',
        'Someone nearby scheduled a wash'
      ];
      let idx = 0;
      const show = () => {
        text.textContent = messages[idx % messages.length];
        idx++;
        box.style.display = 'flex';
        // small animation class via show
        setTimeout(()=> box.classList.add('show'), 20);
        // hide after 4s
        setTimeout(()=>{ box.classList.remove('show'); setTimeout(()=>box.style.display='none',300); }, 4000);
      };
      // initial show after 3s
      setTimeout(show, 3000);
      // repeat every 20s
      setInterval(show, 20000);
    })();

    /* ---------- CTA proximity glow (simple) ---------- */
    // We will make CTA glow on mouse move when pointer is near (distance check)
    (function(){
      const cta = document.getElementById('heroCTA');
      const glowThreshold = 140; // px
      document.addEventListener('mousemove', (e)=>{
        const r = cta.getBoundingClientRect();
        const cx = r.left + r.width/2;
        const cy = r.top + r.height/2;
        const dx = e.clientX - cx;
        const dy = e.clientY - cy;
        const dist = Math.sqrt(dx*dx + dy*dy);
        if (dist < glowThreshold) cta.classList.add('glow-on');
        else cta.classList.remove('glow-on');
      });
      // also add glow when calculator finishes
      document.getElementById('calcBtn').addEventListener('click', ()=> {
        cta.classList.add('glow-on');
        setTimeout(()=> cta.classList.remove('glow-on'), 900);
      });
    })();
  </script>
