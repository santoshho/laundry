<!-- Price Calculator Script -->
<script>
function calculatePrice() {
    const pricePerKg = parseFloat(document.getElementById("serviceType").value);
    const weight = parseFloat(document.getElementById("weightInput").value);

    if (!weight || weight <= 0) return alert("Enter valid weight");

    const total = pricePerKg * weight;

    document.getElementById("resultBox").classList.remove("d-none");
    document.getElementById("totalPrice").innerText = "NPR " + total.toFixed(2);
}
</script>

<!-- Random Popup Script -->
<script>
const messages = [
    "Someone from Gaindakot just placed an order!",
    "New user registered!",
    "Laundry pickup request received!",
    "Clothes delivered successfully!",
    "A customer just booked Dry Cleaning!"
];

function showActivityPopup() {
    const popup = document.getElementById("activityPopup");
    popup.innerText = messages[Math.floor(Math.random() * messages.length)];

    popup.style.display = "block";

    setTimeout(() => {
        popup.style.display = "none";
    }, 3000);
}

// Popup every 15â€“28 seconds randomly
setInterval(showActivityPopup, Math.floor(Math.random() * 13000) + 15000);
</script>

