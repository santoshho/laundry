      opacity:0;
      transition: all .35s ease;
    }
    .activity.show { opacity:1; transform: translateY(0); }
    .activity .dot { width:38px; height:38px; border-radius:50%; background:#0d6efd; color:#fff; display:flex; align-items:center; justify-content:center; font-weight:700; }

    /* ---------- CTA Button Glow (proximity-ish) ---------- */
    .cta-glow { position:relative; overflow:visible; }
    .cta-glow::before {
      content:"";
      position:absolute; inset:-6px;
      border-radius:10px;
      background: radial-gradient(ellipse at center, rgba(13,110,253,0.18) 0%, rgba(13,110,253,0) 60%);
      opacity:0;
      transition:opacity .22s ease, transform .22s ease;
      transform: scale(0.95);
      pointer-events:none;
    }
    .cta-glow:hover::before,
