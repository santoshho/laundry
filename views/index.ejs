<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laundry System</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <%- include("partials/header") %>

    <!-- HERO SECTION -->
    <section class="hero">
        <div class="container hero-box">
            <h1>Professional Laundry Services Made Easy</h1>
            <p>Pickup, track, wash and deliver — all from one platform. Fast, reliable and friendly service around Gandakot.</p>

            <div class="hero-buttons">
                <a href="/register" class="btn-primary">Get Started</a>
                <a href="/login" class="btn-secondary">Sign In</a>
            </div>

            <div class="hero-icon">
                <img src="/img/water-drop.png" alt="Laundry Icon">
            </div>
        </div>
    </section>

    <!-- FEATURES -->
    <section class="features container">
        <div class="feature-box">Quick Service</div>
        <div class="feature-box">Free Pickup</div>
        <div class="feature-box">Quality Care</div>
        <div class="feature-box">24/7 Support</div>
    </section>

    <!-- SERVICES -->
    <section class="our-services container">
        <h2>Our Services</h2>
        <p class="subtitle">Affordable, fast & reliable laundry care — prices shown in NPR.</p>

        <div class="service-grid">
            <% services.forEach(svc => { %>
                <div class="service-card">
                    <h3><%= svc.name %></h3>
                    <p><%= svc.description || '' %></p>
                    <div class="price">NPR <%= svc.price %>/kg</div>
                </div>
            <% }) %>
        </div>
    </section>

    <!-- PRICE CALCULATOR -->
    <section class="price-calculator container">
        <h2>Laundry Price Calculator</h2>

        <div class="calculator-box">
            <label>Select service</label>
            <select id="serviceSelect">
                <% services.forEach(svc => { %>
                    <option value="<%= svc.price %>"><%= svc.name %> — NPR <%= svc.price %></option>
                <% }) %>
            </select>

            <label>Weight (kg)</label>
            <input type="number" id="weightInput" placeholder="kg" min="1" step="0.1">

            <button onclick="calculatePrice()">Calculate</button>

            <h3 id="calculatedPrice"></h3>
        </div>
    </section>

    <script>
        function calculatePrice() {
            const price = Number(document.getElementById("serviceSelect").value);
            const w = Number(document.getElementById("weightInput").value);

            if (!w || w <= 0) {
                document.getElementById("calculatedPrice").innerHTML = "Enter valid weight.";
                return;
            }

            const total = price * w;
            document.getElementById("calculatedPrice").innerHTML = 
                "Total Price: NPR " + total.toFixed(2);
        }
    </script>

    <%- include("partials/footer") %>

</body>
</html>
